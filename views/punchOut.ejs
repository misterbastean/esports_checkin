<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<div class="container">
  <br />
  <div class="row">
    <div class="col-12 text-center">
      <h1>Punch-Out</h1>
    </div>
    <div class="col-12 text-center">
      <p>Scan student ID into field below, then press Enter or click "Punch In" button.</p>
    </div>
  </div>
  <form action="/punches" method="POST">
    <div class="form-group">
      <label for="studentId">Student ID</label>
      <input type="text" class="form-control" id="studentId" name="studentId" placeholder="Scan Student ID" autofocus>
    </div>
    <input type="hidden" name='type' value='out'>
    <button type="submit" class="btn btn-block btn-danger">Punch Out</button>
  </form>
</div>

<%- include("partials/footer") %>
