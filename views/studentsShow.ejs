<%- include('./partials/header') %>
<%- include('./partials/navbar') %>
<div class="container">
  <h1 class='mt-3 text-center'><%= student.firstName %> <%= student.lastName %></h1>
  <div class="row">
    <div class="col-12 text-center"><h3 class='subtitle'>Total Time: <%= totalTime %> minutes</h3></div>
  </div>
<br />
  <table class='table table-striped'>
  <thead>
    <tr>
      <th scope='col'>Date</th>
      <th scope='col'>Time</th>
      <th scope='col'>In/Out</th>
    </tr>
  </thead>
    <% punches.forEach((punch) => { %>
    <tr>
      <td><%= punch.date %></td>
      <td><%= punch.time %></td>
      <td><%= punch.type.charAt(0).toUpperCase() + punch.type.slice(1) %></td>
    </tr>
    <% }); %>
  </table>
</div>


<%- include('./partials/footer') %>
